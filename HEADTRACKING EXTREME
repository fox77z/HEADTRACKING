// ===========================
//  ConfiguraÃ§Ãµes PadrÃ£o por Arma
// ===========================
let armas: [ArmaConfig] = [
    ArmaConfig(
        name: "UMP",
        boost: true,
        aimBot: true,
        noRecoil: true,
        sensitivity: SensitivitySettings(view: 0.7, scope1x: 0.7, scope2x: 0.68, scope4x: 0.65, scope8x: 0.63, dpi: 99, fov: 360),
        aimValue: 0.45
    ),
    ArmaConfig(
        name: "M1014",
        boost: true,
        aimBot: true,
        noRecoil: true,
        sensitivity: SensitivitySettings(view: 0.75, scope1x: 0.73, scope2x: 0.7, scope4x: 0.68, scope8x: 0.65, dpi: 100, fov: 360),
        aimValue: 0.5
    ),
    ArmaConfig(
        name: "XM8",
        boost: true,
        aimBot: true,
        noRecoil: true,
        sensitivity: SensitivitySettings(view: 0.72, scope1x: 0.7, scope2x: 0.68, scope4x: 0.66, scope8x: 0.64, dpi: 99, fov: 360),
        aimValue: 0.48
    )
]

// ===========================
//  Exemplo de uso
// ===========================
for arma in armas {
    iniciarArma(config: arma)
}
