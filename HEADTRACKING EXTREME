import Foundation

// ===========================
//  Estrutura de Sensibilidade
// ===========================
struct SensitivitySettings: Codable {
    var view: Float
    var scope1x: Float
    var scope2x: Float
    var scope4x: Float
    var scope8x: Float
    var dpi: Float
    var fov: Int
}

// ===========================
//  Estrutura de ConfiguraÃ§Ã£o da Arma
// ===========================
struct ArmaConfig: Codable {
    var name: String
    var boost: Bool
    var aimBot: Bool
    var noRecoil: Bool
    var sensitivity: SensitivitySettings
    var aimValue: Float
}

// ===========================
//  FunÃ§Ã£o para iniciar arma
// ===========================
